{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tabletop",
  "version": "0.1.0",
  "identifier": "Tabletop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Table Top",
        "dragDropEnabled": true,
        "center": true,
        "minWidth": 1200,
        "minHeight": 850,
        "transparent": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
